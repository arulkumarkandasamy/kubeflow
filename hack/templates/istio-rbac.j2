apiVersion: rbac.istio.io/v1alpha1
kind: ServiceRole
metadata:
  name: {{ app_name }}
  namespace: kubeflow
spec:
  rules:
    - services:
        - {{ service_name }}.kubeflow.svc.cluster.local
---
apiVersion: rbac.istio.io/v1alpha1
kind: ServiceRoleBinding
metadata:
  name: bind-{{ app_name }}
  namespace: kubeflow
spec:
  roleRef:
    kind: ServiceRole
    name: {{ app_name }}
  subjects:
    - user: '*'